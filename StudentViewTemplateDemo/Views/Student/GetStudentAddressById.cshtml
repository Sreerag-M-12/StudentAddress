@model  StudentViewTemplateDemo.Models.Address

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetStudentAddressById</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>
    <div>
        <h4>Address</h4>
        <hr />
        @if (Model.State == null)
        {
                <h3> Address doesnt exist for this student</h3>
        }
        else
        {
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.City)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.City)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.State)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.State)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Country)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Country)
            </dd>

        </dl>
        }
    </div>
    <p>

        <button onclick="location.href='@Url.Action("Index", "Student")'"  class="btn btn-primary">Student List</button>
        <button onclick="location.href='@Url.Action("EditAddress", "Student", new { id = Model.Id })'" class="btn btn-success">Edit Address</button>
        <button onclick="location.href='@Url.Action("DeleteAddress", "Student", new { id = Model.Id })'" class="btn btn-warning">Delete Address</button>

    </p>

</body>
</html>

